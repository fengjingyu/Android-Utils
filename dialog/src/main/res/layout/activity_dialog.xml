<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/originAlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="原生alertdialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/originProgressDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="原生ProgressDialog进度圈圈"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/originProgressDialog2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="原生ProgressDialog进度圈圈2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/originProgressDialog3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="原生ProgressDialog进度条"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/rotateImgDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="旋转图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/sweetDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="sweetDialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/shareDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="shareDialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/plusHolderDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="plusHolderDialog"
            android:textAllCaps="false" />


    </LinearLayout>

</ScrollView>

