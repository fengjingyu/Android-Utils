<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xc_id_model_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_white_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stack_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.2"
            android:textSize="14sp" />

        <Button
            android:id="@+id/to_main_activity"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="toMainActivity" />

        <Button
            android:id="@+id/to_search_activity1"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="toSearchActivity1" />

        <Button
            android:id="@+id/to_search_activity2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="toSearchActivity2" />

        <Button
            android:id="@+id/finish_activity"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="finish_SearchActivity1" />

        <Button
            android:id="@+id/finish_activity2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="finish_SearchActivity2" />

        <Button
            android:id="@+id/finish_current_activity"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="finish_current_activity" />

        <Button
            android:id="@+id/finish_all_activity"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="finish_all_activity" />

        <Button
            android:id="@+id/finish_activity_then_startActivity"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="finish_activity_then_startActivity" />

    </LinearLayout>

</ScrollView>


