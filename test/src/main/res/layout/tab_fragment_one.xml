<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_yellow_ffce43"
    android:orientation="vertical">

    <!-- @c -->
    <Button
        android:id="@+id/percentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百分比布局"
        android:textAllCaps="false" />

    <!-- @c -->
    <Button
        android:id="@+id/propertyAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="属性动画抛物线"
        android:textAllCaps="false" />

    <!-- @c -->
    <Button
        android:id="@+id/leakCanary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="leakCanary库"
        android:textAllCaps="false" />

    <!-- @c -->
    <Button
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="几种定时器的实现"
        android:textAllCaps="false" />

    <!-- @c -->
    <Button
        android:id="@+id/systemDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统的dailog"
        android:textAllCaps="false" />

    <!-- @c -->
    <Button
        android:id="@+id/destroygc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="activity fragment的destroy之后的引用"
        android:textAllCaps="false" />

    <!-- @c -->
    <Button
        android:id="@+id/handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="handler looper thread"
        android:textAllCaps="false" />


</LinearLayout>