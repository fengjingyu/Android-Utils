<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="几个定时器的例子" />

            <Button
                android:id="@+id/clearcache"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="缓存清理的封装类" />

            <Button
                android:id="@+id/contacts"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="获取联系人" />

            <Button
                android:id="@+id/destroygc"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="fragment与activity销毁时的回收问题"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/exception"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="crash异常的收集"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="封装了相册与摄像头获取图片的fragment"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/seachRecoder"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="activity stack的管理"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/simpleadapter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="简单的adapter"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="recycleView" />

            <Button
                android:id="@+id/recycleView_waterfall"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="recycleView瀑布流" />

            <Button
                android:id="@+id/leakcanary"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="内存泄露检测" />

            <Button
                android:id="@+id/propertyAnim"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="属性动画" />

            <Button
                android:id="@+id/handler"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="handler详解"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
