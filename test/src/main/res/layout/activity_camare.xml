<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ablum_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/ablumNoCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册-无裁剪图片" />

        <Button
            android:id="@+id/ablumCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册-裁剪图片" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/camare_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ablum_layout"
        android:orientation="vertical">

        <Button
            android:id="@+id/caremaNoCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照-无裁剪图片" />

        <Button
            android:id="@+id/caremaCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照-裁剪图片" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/camare_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


</RelativeLayout>