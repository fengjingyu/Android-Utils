<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/originAlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="原生alertdialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/originProgressDialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="原生ProgressDialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/originProgressDialog2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="原生ProgressDialog2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/originProgressDialog3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="原生ProgressDialog3"
            android:textAllCaps="false" />


    </LinearLayout>

</ScrollView>

